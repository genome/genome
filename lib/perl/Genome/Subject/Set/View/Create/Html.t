#!/usr/bin/env genome-perl

use strict;
use warnings;

BEGIN {
    $ENV{UR_DBI_NO_COMMIT} = 1;
    $ENV{UR_USE_DUMMY_AUTOGENERATED_IDS} = 1;
}

use above 'Genome';
use Test::More tests => 3;

use_ok('Genome::Subject::Set::View::Create::Html');

my $set = Genome::Subject->define_set();

my $view = $set->create_view(
    perspective => 'create',
    toolkit => 'html',
    xsl_root => Genome->base_dir . '/xsl',
    rest_variable => '/cgi-bin/rest.cgi',
);
isa_ok($view, 'Genome::Subject::Set::View::Create::Html', 'created view');

my $html = $view->content();
ok($html, 'generated content for view');
